@model ClinicaVeterinariaApp.Models.Species

@{
    ViewBag.Title = "Modifica Specie";
}

<h2 class="page-title mt-4">Modifica il nome della specie</h2>

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <hr />
        <div class="form-horizontal d-flex flex-column align-items-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SpecieID)

            <div class="form-group d-flex flex-column align-items-center">
                <div class="col-md-10 mt-4">
                    @Html.EditorFor(model => model.Specie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Specie, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salva" class="btn mt-3" style="background-color: rgb(26, 113, 17); color:white" />
                </div>
            </div>
        </div>
    }

    <div>
        <a class="btn-species btn btn-default my-5" href="@Url.Action("Index", "Species")">Torna alla lista</a>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
